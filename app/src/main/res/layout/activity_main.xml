<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECF3F6"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".activity.MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/tool_bar_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#44B9ED"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="23dp"
            android:layout_width="45dp"
            android:layout_height="45dp">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_login_logout"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/iv_hello"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_user"
            android:textColor="@color/black"
            android:gravity="left"
            android:padding="5dp"
            android:textSize="14sp"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_weight="2"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_logo_app"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_gravity="center|right"
            android:scaleType="centerInside"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_app"
            tools:ignore="NestedWeights" />

    </LinearLayout>

    <com.smile.watchmovie.custom.CustomViewPager
        android:id="@+id/view_pager"
        android:background="@color/white"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/splash_layout"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_app"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:text="From"
            android:layout_above="@+id/tv_name_owner"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_name_owner"
            android:text="@string/nameOwner"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:textColor="@color/com_facebook_messenger_blue"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@color/custom_color_bottom_nav"
        app:itemTextColor="@color/custom_color_bottom_nav"/>
</LinearLayout>