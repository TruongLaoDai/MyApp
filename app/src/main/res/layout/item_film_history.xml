<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_film"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/lout_image"
        android:layout_width="140dp"
        android:layout_height="170dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/iv_image_film1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="12dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_image_film"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_film_arrow_conner"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/lout_premium"
                android:background="@drawable/bg_premium_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="end">

                <TextView
                    android:id="@+id/tv_premium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@+id/iv_premium"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="@string/premium" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_premium"
                    android:tint="@color/white"
                    android:padding="2dp"
                    android:src="@drawable/ic_premium"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loat_detail_film"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/lout_image"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name_film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Vo than chua te" />

        <TextView
            android:id="@+id/tv_day_watched"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginEnd="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_film"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            tools:text="8.0" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_more_action"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:layout_alignRight="@+id/loat_detail_film"
        android:src="@drawable/ic_more_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>