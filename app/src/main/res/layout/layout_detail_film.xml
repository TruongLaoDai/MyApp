<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@android:color/white">

    <LinearLayout
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/layout_detail1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tittle_detail"
            android:text="CHi tiet"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_close"
                android:padding="5dp"
                android:foregroundGravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/img_logo_film"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tittle_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/anhlogin"
                    android:scaleType="centerCrop"
                    android:layout_width="90dp"
                    android:layout_height="120dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name_film"
                android:textColor="@color/black"
                android:layout_alignTop="@+id/img_logo_film"
                android:layout_toEndOf="@+id/img_logo_film"
                android:text="@string/add_film_dislike"
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_category"
                android:layout_toEndOf="@+id/img_logo_film"
                android:layout_below="@+id/tv_name_film"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/add_film_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_created"
                android:layout_toEndOf="@+id/img_logo_film"
                android:layout_below="@+id/tv_category"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/add_film_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_episodesTotal"
                android:layout_toEndOf="@+id/img_logo_film"
                android:layout_below="@+id/tv_created"
                android:textSize="13sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/add_film_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_description"
                android:text="@string/add_film_dislike"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_description"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_title_description"
                android:text="@string/add_film_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>