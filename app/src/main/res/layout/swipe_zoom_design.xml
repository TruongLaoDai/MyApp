<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/vol_progress_container"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:background="@drawable/progress_bar_bg"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/vol_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_gravity="center_horizontal"
            android:max="100"
            android:progress="50"
            android:layout_width="5dp"
            android:layout_height="115dp"
            android:progressDrawable="@drawable/progress_vertical_bar"/>

        <ImageView
            android:id="@+id/vol_icon"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:background="@drawable/progress_bar_bg"
        android:id="@+id/vol_text_container"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/volume"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/vol_text"
            android:text="10"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/brt_progress_container"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:background="@drawable/progress_bar_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/brt_progress"
            style="?android:progressBarStyleHorizontal"
            android:layout_gravity="center_horizontal"
            android:max="100"
            android:progress="50"
            android:layout_width="5dp"
            android:layout_height="115dp"
            android:progressDrawable="@drawable/progress_vertical_bar"/>

        <ImageView
            android:id="@+id/brt_icon"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:background="@drawable/progress_bar_bg"
        android:id="@+id/brt_text_container"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/bright"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/brt_text"
            android:text="10"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>