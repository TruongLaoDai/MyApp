<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <RelativeLayout
                    android:id="@+id/more_carton_movie"
                    android:layout_weight="0.53"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:text="Hoạt hình"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_arrow_right_more_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@drawable/bg_film_arrow_conner"
                    android:layout_weight="2.6"
                    android:id="@+id/rcv_film1"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <RelativeLayout
                    android:id="@+id/more_action_movie"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:text="Hành động"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_arrow_right_more_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@drawable/bg_film_arrow_conner"
                    android:layout_weight="2.5"
                    android:id="@+id/rcv_film2"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <RelativeLayout
                    android:id="@+id/more_horror_movie"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:text="Kinh dị"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_arrow_right_more_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@drawable/bg_film_arrow_conner"
                    android:layout_weight="2.5"
                    android:id="@+id/rcv_film3"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <RelativeLayout
                    android:id="@+id/more_thriller_movie"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:text="Trinh thám"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_arrow_right_more_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@drawable/bg_film_arrow_conner"
                    android:layout_weight="2.5"
                    android:id="@+id/rcv_film4"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <RelativeLayout
                    android:id="@+id/more_comedy_movie"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:text="Hài kịch"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_arrow_right_more_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@drawable/bg_film_arrow_conner"
                    android:layout_weight="2.5"
                    android:id="@+id/rcv_film5"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <RelativeLayout
                    android:id="@+id/more_romantic_movie"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:text="Lãng mạn"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_arrow_right_more_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@drawable/bg_film_arrow_conner"
                    android:layout_weight="2.5"
                    android:id="@+id/rcv_film6"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <RelativeLayout
                    android:id="@+id/more_adventure_movie"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <TextView
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="19sp"
                        android:textColor="@color/black"
                        android:text="Phiêu lưu"
                        android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:gravity="center_vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_arrow_right_more_category"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:background="@drawable/bg_film_arrow_conner"
                    android:layout_weight="2.5"
                    android:id="@+id/rcv_film7"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/load_home_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>