<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="corner_avatar_user">
        <item name="cornerSize">30%</item>
    </style>

    <style name="corner_avatar_50">
        <item name="cornerSize">50%</item>
    </style>

    <style name="corner_avatar_12dp">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Button_Setting" parent="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right_more_category</item>
        <item name="android:drawablePadding">15dp</item>
    </style>

    <!-- Thuộc tính chung áp dụng cho text trong app -->
    <style name="Text" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Line" parent="Widget.Material3.MaterialDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="dividerColor">@color/color_line_setting</item>
    </style>

    <style name="Button" parent="Widget.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">#5AB9A3</item>
    </style>

    <style name="Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

</resources>